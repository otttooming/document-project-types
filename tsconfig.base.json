{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "exclude": ["./node_modules"]
}
